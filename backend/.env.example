# WebSocket/Channels Configuration (for Kanban real-time features)
# USE_REDIS_CHANNELS: Set to True to use Redis for WebSocket channel layer (recommended for production)
# Set to False to use InMemoryChannelLayer (single-process only, for development)
USE_REDIS_CHANNELS=True
# REDIS_CHANNELS_URL: Redis connection URL for Django Channels WebSocket layer
REDIS_CHANNELS_URL=redis://localhost:7071/4

# SMB File Storage Configuration (Windows network share for Excel files)
# SMB_ENABLED: Set to True to enable SMB uploads (requires intranet/VPN access)
SMB_ENABLED=False
# SMB_SERVER: IP address of Windows SMB server (e.g., 192.168.1.100)
SMB_SERVER=192.168.1.100
# SMB_SHARE_NAME: Name of shared folder on Windows server
SMB_SHARE_NAME=OvertimeReports
# SMB_USERNAME: Domain\username or just username for SMB authentication
SMB_USERNAME=DOMAIN\username
# SMB_PASSWORD: Password for SMB user
SMB_PASSWORD=<secure_password>
# SMB_DOMAIN: Windows domain name (WORKGROUP for workgroup setups)
SMB_DOMAIN=WORKGROUP
# SMB_PORT: SMB protocol port (default 445)
SMB_PORT=445
# SMB_TIMEOUT: Connection timeout in seconds
SMB_TIMEOUT=30
# SMB_POOL_MIN_SIZE: Minimum connections to maintain in pool
SMB_POOL_MIN_SIZE=2
# SMB_POOL_MAX_SIZE: Maximum connections allowed in pool
SMB_POOL_MAX_SIZE=5
# SMB_PATH_PREFIX: Optional path prefix within the share
SMB_PATH_PREFIX=Management\PTB\AST_Portal_Overtime\

# Excel Generation Settings
EXCEL_TEMP_ONLY=True

# Throttling (optional - enable if needed)
THROTTLING_ENABLED=False
EXPORT_THROTTLE_RATE=10/min

# App Port
APP_HOST=0.0.0.0
APP_PORT=8008

# Logging Configuration
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Staging: WARNING reduces noise from request-level details
LOG_LEVEL=WARNING